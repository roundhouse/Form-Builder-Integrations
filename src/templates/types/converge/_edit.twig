{% import "_includes/forms" as forms %}

<h2>{{ "Settings"|t('form-builder') }}</h2>

{{ forms.textField({
    label: "Mechant ID"|t('form-builder'),
    id: 'integration-merchant-id',
    name: 'settings[merchantId]',
    value: entry.settings.merchantId is defined ? entry.settings.merchantId,
    autocorrect: false,
    autocapitalize: false,
}) }}

{{ forms.textField({
    label: "Mechant Key"|t('form-builder'),
    id: 'integration-merchant-key',
    name: 'settings[merchantKey]',
    value: entry.settings.merchantKey is defined ? entry.settings.merchantKey,
    autocorrect: false,
    autocapitalize: false,
}) }}

{{ forms.textField({
    label: "Mechant Pin"|t('form-builder'),
    id: 'integration-merchant-pin',
    name: 'settings[merchantPin]',
    value: entry.settings.merchantPin is defined ? entry.settings.merchantPin,
    autocorrect: false,
    autocapitalize: false,
}) }}

{{ forms.selectField({
    label: "Type"|t('form-builder'),
    id: 'integration-merchant-type',
    name: 'settings[type]',
    value: entry.settings.type is defined ? entry.settings.type,
    options: [
        {label: 'Credit Card', value: 'CreditCard'},
        {label: 'ECheck / ACH', value: 'ECheckACH'},
    ],
}) }}

{{ forms.selectField({
    label: "Test Mode"|t('form-builder'),
    id: 'integration-test-mode',
    name: 'settings[testMode]',
    value: entry.settings.testMode is defined ? entry.settings.testMode,
    options: [
        {label: 'Disabled', value: 'false'},
        {label: 'Enabled', value: 'true'},
    ],
}) }}

{{ forms.textField({
    label: "Currency"|t('form-builder'),
    id: 'integration-currency',
    name: 'settings[currency]',
    value: entry.settings.currency is defined ? entry.settings.currency,
    autocorrect: false,
    autocapitalize: false,
}) }}

